{
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "root": true,
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "ignorePatterns": [
    ".eslintrc.json",
    "node_modules",
    "android",
    "ios",
    "__tests__",
    "*.config.js"
  ],
  "rules": {
    "@typescript-eslint/no-explicit-any": "off",
    "@typescript-eslint/explicit-module-boundary-types": "off"
  }
}
