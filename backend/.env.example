# ============================================
# CinemAi Backend - Environment Variables
# ============================================
# 
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git!

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/cinemai

# OpenAI API (Required for AI agents)
OPENAI_API_KEY=sk-...
DEFAULT_AI_MODEL=gpt-4-turbo-preview

# Apple IAP (Required for iOS subscriptions)
APPLE_SHARED_SECRET=your_apple_shared_secret

# JWT Secret (Required for authentication)
JWT_SECRET=your_very_long_and_secure_random_string_here

# Admin JWT (Required for Windows admin app)
ADMIN_JWT_SECRET_OR_PUBLIC_KEY=your_admin_jwt_secret_here

# API Timeout (Optional)
OPENAI_TIMEOUT_MS=30000

# Runway API (Optional - for visual generation)
RUNWAY_API_KEY=your_runway_api_key

# Pika API (Optional - for visual generation)
PIKA_API_KEY=your_pika_api_key

# ElevenLabs API (Optional - for audio synthesis)
ELEVENLABS_API_KEY=your_elevenlabs_api_key

# Twitter API (Optional - for quest verification)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret

# Farcaster API (Optional - for quest verification)
FARCASTER_API_KEY=your_farcaster_api_key

# Email Service (Optional - for admin app)
SENDGRID_API_KEY=your_sendgrid_api_key
AWS_SES_ACCESS_KEY_ID=your_aws_ses_access_key
AWS_SES_SECRET_ACCESS_KEY=your_aws_ses_secret_key

# Node Environment
NODE_ENV=development

# Port
PORT=3000
