# CinemAi Neo - AI Agents Dockerfile
FROM python:3.11-slim AS builder

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    curl \
    ffmpeg \
    libmagic1 \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY agents/cinema/requirements.txt ./cinema/
COPY agents/shorts/requirements.txt ./shorts/
COPY agents/growth/requirements.txt ./growth/
COPY agents/shared/requirements.txt ./shared/

# Install Python dependencies
RUN pip install --no-cache-dir --upgrade pip && \
    pip install --no-cache-dir -r cinema/requirements.txt && \
    pip install --no-cache-dir -r shorts/requirements.txt && \
    pip install --no-cache-dir -r growth/requirements.txt && \
    pip install --no-cache-dir -r shared/requirements.txt

# Production stage
FROM python:3.11-slim

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ffmpeg \
    libmagic1 \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Create app user
RUN groupadd -r appuser && useradd -r -g appuser appuser

WORKDIR /app

# Copy Python packages
COPY --from=builder /usr/local/lib/python3.11/site-packages /usr/local/lib/python3.11/site-packages
COPY --from=builder /usr/local/bin /usr/local/bin

# Copy application code
COPY --chown=appuser:appuser agents/ ./

USER appuser

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD pgrep -f "python.*agent" || exit 1

EXPOSE 8000

# Default command (override in compose)
CMD ["python", "-m", "cinema.main"]
